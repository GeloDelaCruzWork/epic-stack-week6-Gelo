{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"types": ["node", "mocha", "selenium-webdriver"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
